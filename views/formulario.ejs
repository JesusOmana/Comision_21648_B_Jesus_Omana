    <div class="form-floating row col-md-6 offset-md-3">
        <form action="/posteos/crearpost" method="post" class="text-center m-2" >
            <input type="text" class="form-control"  name="titulo" placeholder="Titulo del Posteo"> <br>
            <textarea name="contenido" class="form-control" cols="30" rows="5" placeholder="contanos una experiencia de tu vida"></textarea> <br>
            <input type="url" class="form-control" name="url" required placeholder="nos gustaria que compartas el link de una imagen">
            <button class="m-3 col-md-4 align-self-center btn btn-outline-success">crear nota</button>
        </form>
    </div>
    <%- include("footer") %>
